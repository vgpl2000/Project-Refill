<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040404"
    tools:context=".splash_screen">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="196dp"
        android:layout_height="103dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="378dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Refill"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="75sp" />

    <TextView
        android:id="@+id/title_text2"
        android:layout_width="375dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="342dp"
        android:fontFamily="@font/poppins_medium"
        android:text="AkashaDeepa Home Products"
        android:textAlignment="center"
        android:textColor="#676666"
        android:textSize="20sp"
        tools:text="AkashaDeepa Home Products" />

    <TextView
        android:id="@+id/copyright_text"
        android:layout_width="137dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="7dp"
        android:text="Copyright Reserved"
        android:textAlignment="center"
        android:textColor="#8f9090"
        android:textSize="14sp"
        tools:text="Copyright Reserved" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="21dp"
        android:layout_height="13dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="256dp"
        android:layout_marginBottom="24dp"
        android:foregroundTint="#8f9090"
        app:srcCompat="@drawable/copyright"
        app:tint="#8f9090" />
</RelativeLayout>