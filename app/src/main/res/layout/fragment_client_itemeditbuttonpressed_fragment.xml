<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edititemclosefrag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/transperant_black"
    android:layout_gravity="center"
    tools:context=".change_pswrd_Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="379dp"
        android:layout_height="546dp"
        android:layout_gravity="center"
        android:background="@drawable/background_button5"
        android:padding="15dp">


        <ImageView
            android:id="@+id/btntoclosefragmentedit"
            android:layout_width="40dp"
            android:layout_height="43dp"
            android:clickable="true"
            android:foregroundGravity="center"
            android:src="@drawable/yellow_baseline_close_24"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Edit Item/Delete"
            android:textColor="#FFF3D200"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.115" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="namehere"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/nametodisplayinedit"
            app:layout_constraintBottom_toTopOf="@+id/newprice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <EditText
            android:id="@+id/newprice"
            android:layout_width="295dp"
            android:layout_height="63dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/entry_fields"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:hint="Enter New Price"
            android:inputType="number"
            android:padding="10dp"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.234" />

        <EditText
            android:id="@+id/newweight"
            android:layout_width="295dp"
            android:layout_height="63dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/entry_fields"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:hint="Enter New Weight(gms)"
            android:inputType="number"
            android:padding="10dp"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newprice"
            app:layout_constraintVertical_bias="0.127" />

        <Button
            android:id="@+id/btntoupdateitemfromdatabase"
            android:layout_width="210dp"
            android:layout_height="51dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_button"
            android:fontFamily="@font/poppins_medium"
            android:hapticFeedbackEnabled="true"
            android:padding="10dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newweight"
            app:layout_constraintVertical_bias="0.054" />

        <Button
            android:id="@+id/btntodeleteitemfromdatabase"
            android:layout_width="120dp"
            android:layout_height="47dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/backgroun_button3"
            android:fontFamily="@font/poppins_medium"
            android:hapticFeedbackEnabled="true"
            android:padding="10dp"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btntoupdateitemfromdatabase"
            app:layout_constraintVertical_bias="0.088" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

