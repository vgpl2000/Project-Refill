<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cdview"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@drawable/entry_field_white"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/retailer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Name Comes here"
        android:textColor="@color/white"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/pmodeforclient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/retailer_name"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:text="mode" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/retailer_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:padding="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/btn_checkorders"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:background="@drawable/background_button2"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:padding="2dp"
                android:text="Check Orders"
                android:textAllCaps="false"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_accept"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/background_button2"
                android:drawableLeft="@drawable/ic_baseline_check_24"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:padding="6dp"
                android:text="Accept"
                android:textAllCaps="false"
                android:textSize="12dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_cancl"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/btn_checkorders"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/btn_cancl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/backgroun_button3"
                android:drawableLeft="@drawable/ic_baseline_close_24"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:padding="6dp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@id/btn_deli"
                app:layout_constraintStart_toEndOf="@+id/btn_accept"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />


            <Button
                android:id="@+id/btn_deli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/background_button4"
                android:drawableLeft="@drawable/ic_baseline_done_all_24"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:padding="6dp"
                android:text="Delivered"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_cancl"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</RelativeLayout>
</androidx.cardview.widget.CardView>