<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/add_item"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".client_btnplus_add_item_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="45dp"
        android:layout_gravity="center"
        android:gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="27dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:clickable="true"

                android:foregroundGravity="center"
                android:src="@drawable/yellow_baseline_close_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/imageViewfritem"
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:background="@drawable/entry_field_white"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.066" />

        <View
            android:layout_width="0dp"
            android:layout_height="12dp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/item_name"
                android:layout_width="274dp"
                android:layout_height="60dp"
                android:background="@drawable/entry_fields"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:inputType="text"
                android:hint="Enter Item Name"
                android:paddingLeft="8dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewfritem"
                app:layout_constraintVertical_bias="0.033" />
        <View
            android:layout_width="0dp"
            android:layout_height="12dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/item_price"
                android:layout_width="274dp"
                android:layout_height="60dp"
                android:background="@drawable/entry_fields"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:hint="Enter Item Price"
                android:inputType="number"
                android:paddingLeft="8dp"
                android:paddingRight="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_name"
                app:layout_constraintVertical_bias="0.035" />
        <View
            android:layout_width="0dp"
            android:layout_height="12dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_weight"
            android:layout_width="274dp"
            android:layout_height="60dp"
            android:background="@drawable/entry_fields"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:hint="Enter Item Weight"
            android:inputType="number"
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_price"
            app:layout_constraintVertical_bias="0.052" />

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"/>

            <Button
                android:id="@+id/btn_add_item_client"
                android:layout_width="139dp"
                android:layout_height="62dp"
                android:background="@drawable/background_button"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="Add Item"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_quan"
                app:layout_constraintVertical_bias="0.224" />

    </LinearLayout>

    </FrameLayout>