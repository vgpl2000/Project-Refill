<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aboutinfo_r"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/transperant_black"
    android:layout_gravity="center"
    tools:context=".change_pswrd_Fragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="390dp"
        android:layout_height="600dp"
        android:background="@drawable/entry_field_white"
        android:layout_gravity="center"
        android:padding="15dp">


        <ImageView
            android:id="@+id/btn_close_chng_r"
            android:layout_width="40dp"
            android:layout_height="43dp"
            android:clickable="true"
            android:foregroundGravity="center"
            android:src="@drawable/yellow_baseline_close_24"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="About"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.049" />

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="320dp"
            android:layout_height="250dp"
            android:scrollbarSize="5dp"
            android:scrollbarStyle="outsideOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6">

            <TextView
                android:id="@+id/abttxt"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"
                android:text="Akashadeepa Home Products is one of the leading businesses in locality of Puttur. Thank you for being with us and let's make the business better together.
This application is developed for the purpose of fulfilling the requirements like, keeping track of orders, placing orders, and real-time updates of the order and items available to Refill.
This application is powered by Firebase real-time database, Firebase Cloud Storage, Firebase Cloud Messaging for real-time notifications. To provide better security, users of this application can change the password, can only login from only one device at a time.
Also don't forget to give feedback and ratings. Thank you once again!"
                android:textAlignment="center"
                android:textSize="15dp" />

        </ScrollView>

        <TextView
            android:id="@+id/ratetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate Us"
            android:textColor="@color/white"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@+id/scrollview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundTint="@color/yellow"
            android:progressTint="@color/yellow"
            android:theme="@style/Widget.AppCompat.RatingBar"
            android:stepSize="0.5"
            app:layout_constraintTop_toBottomOf="@+id/ratetxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/devetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developers: "
            app:layout_constraintBottom_toTopOf="@+id/names"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/yellow"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Akash C Bhat\nP M Venugoapala"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_medium"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

