<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cdviewfordisplayingretailerlist"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">


<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:elevation="100dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgprofile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="100dp"
        android:src="@drawable/ic_baseline_person_outline_24"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:id="@+id/rell"
        android:layout_width="match_parent"
        android:background="@drawable/entry_field_white"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <TextView
            android:id="@+id/retailer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_toLeftOf="@+id/switchview"
            android:layout_toEndOf="@+id/progressBarakasha"
            android:fontFamily="@font/poppins_medium"
            android:text="Name Comes here"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <ProgressBar
            android:id="@+id/progressBarakasha"
            style="?android:attr/progressBarStyle"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="114dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_bar"
            android:visibility="gone" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/retailer_name"
            android:layout_alignBottom="@+id/retailer_name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Block  "
            android:textColor="@color/white"
            android:textSize="15dp"
            android:thumb="@drawable/thumb"
            app:track="@drawable/track" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/retailer_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:padding="5dp">

            <Button
                android:id="@+id/buttontoopentransactions"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/background_button"
                android:fontFamily="@font/poppins_medium"
                android:text="All Orders"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Due: "
                android:textColor="@color/white"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edittexttoeditdueamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/entry_field_white"
                android:drawableLeft="@drawable/ic_baseline_currency_rupee_24"
                android:fontFamily="@font/poppins_medium"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/buttontosubmitdue"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/entry_fields"
                android:fontFamily="@font/poppins_medium"
                android:text="Submit"
                android:textSize="15dp"
                android:visibility="gone" />


        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>