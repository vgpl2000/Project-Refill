<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chng_passwd_r"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transperant_black"
    android:layout_gravity="center"
    tools:context=".change_pswrd_Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="369dp"
        android:layout_height="461dp"
        android:layout_gravity="center"
        android:background="@drawable/entry_fields"
        android:padding="15dp">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="43dp"
            android:foregroundGravity="center"
            android:id="@+id/btn_close_chng_r"
            android:clickable="true"
            android:src="@drawable/yellow_baseline_close_24"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:clickable="false"
            android:text="Change Password"
            android:textColor="#FFF3D200"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.551"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.085" />

        <EditText
            android:id="@+id/txt_c_passwrd_r"
            android:layout_width="295dp"
            android:layout_height="63dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/entry_fields"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:hint="Enter Current Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@id/txt_n_passwrd_r"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.277" />

        <EditText
            android:id="@+id/txt_n_passwrd_r"
            android:layout_width="295dp"
            android:layout_height="63dp"
            android:layout_marginBottom="168dp"
            android:background="@drawable/entry_fields"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:hint="Enter New Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_chng_passwrd_r"
            android:layout_width="256dp"
            android:layout_height="58dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="68dp"
            android:background="@drawable/background_button"
            android:fontFamily="@font/poppins_medium"
            android:padding="10dp"
            android:text="Change Password"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_n_passwrd_r"
            app:layout_constraintVertical_bias="0.648" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

